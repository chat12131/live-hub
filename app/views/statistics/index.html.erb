<div class="stats-ga">
  <main class="stats-ga__main stats-ga__main--solo">
    <header class="stats-ga__header">
      <div>
      <p class="stats-ga__eyebrow">Statistical Data</p>
        <h1 class="stats-ga__title">統計ダッシュボード</h1>
      </div>
      <div class="stats-ga__header-actions"></div>
    </header>

    <section class="stats-ga__grid">
      <div class="stats-ga__panel stats-ga__panel--wide">
        <div class="stats-ga__panel-header">
          <div>
            <p class="stats-ga__panel-label">ライブ</p>
            <h2 class="stats-ga__panel-title">今年のライブ動向</h2>
          </div>
          <%= link_to "詳細を見る", statistics_live_path, class: "stats-ga__panel-link" %>
        </div>
        <div class="stats-ga__kpis">
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">今年のライブ数</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@year_live_count) %><span>回</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">チケ+ドリンク</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@year_live_expense) %><span>円</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">最多会場</div>
            <div class="stats-ga__kpi-value stats-ga__kpi-value--text">
              <%= @year_top_venue_name ? @year_top_venue_name : "データなし" %>
            </div>
            <div class="stats-ga__kpi-subtext"><%= @year_top_venue_name ? "#{@year_top_venue_count}回" : "" %></div>
          </div>
        </div>
        <div class="stats-ga__chart">
          <div class="stats-ga__chart-placeholder" aria-hidden="true"></div>
        </div>
      </div>

      <div class="stats-ga__panel">
        <div class="stats-ga__panel-header">
          <div>
            <p class="stats-ga__panel-label">グッズ</p>
            <h2 class="stats-ga__panel-title">今年の購入記録</h2>
          </div>
          <%= link_to "詳細を見る", statistics_goods_path, class: "stats-ga__panel-link" %>
        </div>
        <div class="stats-ga__kpis stats-ga__kpis--stack">
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">購入数</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@year_goods_count) %><span>点</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">購入金額</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@year_goods_expense) %><span>円</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">最多カテゴリ</div>
            <div class="stats-ga__kpi-value stats-ga__kpi-value--text">
              <%= @year_top_category_name ? @year_top_category_name : "データなし" %>
            </div>
            <div class="stats-ga__kpi-subtext"><%= @year_top_category_name ? "#{number_with_delimiter(@year_top_category_total)}点" : "" %></div>
          </div>
        </div>
      </div>

      <div class="stats-ga__panel">
        <div class="stats-ga__panel-header">
          <div>
            <p class="stats-ga__panel-label">アーティスト</p>
            <h2 class="stats-ga__panel-title">アーティスト動向</h2>
          </div>
          <%= link_to "詳細を見る", statistics_artists_path, class: "stats-ga__panel-link" %>
        </div>
        <div class="stats-ga__kpis stats-ga__kpis--stack">
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">登録数</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@artists_total_count) %><span>組</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">今年追加</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@artists_year_count) %><span>組</span></div>
          </div>
          <div class="stats-ga__kpi">
            <div class="stats-ga__kpi-label">お気に入り</div>
            <div class="stats-ga__kpi-value"><%= number_with_delimiter(@artists_favorite_count) %><span>組</span></div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
